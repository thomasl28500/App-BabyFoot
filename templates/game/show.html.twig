{% block title %}Game{% endblock %}

{% block body %}
    <h1>Game</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ game.id }}</td>
            </tr>
            <tr>
                <th>TeamBlueScore</th>
                <td>{{ game.teamBlueScore }}</td>
            </tr>
            <tr>
