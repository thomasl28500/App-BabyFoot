{% extends 'base.html.twig' %}

{% block title %}Hello RankingController!{% endblock %}

{% block body %}
<div class="hero overlay" style="background-image: url('images/bg_4.jpg');">
      <div class="container">
        <div class="row align-items-center">
          <div class="col-lg-5 ml-auto">
            <h1 class="text-white">Classement des équipes</h1>
            <p>
						  <a href="{{path('app_game_new')}}" class="btn btn-primary py-3 px-4 mr-3">Organiser un match</a>
            </p>  
          </div>
        </div>
      </div>
    </div>
    
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="d-flex team-vs">
            <div style="width: 100%;">
              <table class="table custom-table">
                <thead>
                  <tr>
                    <th>P</th>
                    <th>Nom de l'équipe</th>
                    <th>W</th>
                    <th>D</th>
                    <th>PTS</th>
                  </tr>
                </thead>
                <tbody>
                {% if data is not empty %}
                {% for team in data %}
                  <tr>
                    <td>{{ loop.index }}</td>
                    <td><strong class="text-white">{{ team.name }}</strong></td>
                    <td>{{ team.victory }}</td>
                    <td>{{ team.defeat }}</td>
                    <td>{{ team.victory * 3 }}</td>
                  </tr>
                {% endfor %}
                {% else %}
                  <tr>
                      <td colspan="5">Aucune équipe créée...</td>
                  </tr>
                {% endif %}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>

{% endblock %}
