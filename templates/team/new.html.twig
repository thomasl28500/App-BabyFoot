{% extends 'base.html.twig' %}

{% block title %}Babyfoot By CCI - Créer une équipe
{% endblock %}

{% block body %}
	<div class="hero overlay" style="background-image: url('../images/bg_5.jpg');">
		<div class="container">
			<div class="row align-items-center">
				<div class="col-lg-12">
					<div class="d-flex register_card flex-column">
						<div class="p-4">
							<h1>Créer une équipe</h1>
							{% for type, messages in app.flashes %}
								{% for message in messages %}
									<div class="alert alert-danger" role="alert">
										{{ message }}
									</div>
								{% endfor %}
							{% endfor %}
							{{ include('team/_form.html.twig', {'button_label': 'Créer l\'équipe'}) }}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>


{% endblock %}